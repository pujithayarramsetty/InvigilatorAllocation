{
  "name": "schedulo-invigilator-allocation",
  "version": "1.0.0",
  "description": "Smart Campus Automation & Scheduling Platform for Invigilator Allocation",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "install-server": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm run install-server && npm run install-client"
  },
  "keywords": ["invigilator", "scheduling", "mern", "automation"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}

